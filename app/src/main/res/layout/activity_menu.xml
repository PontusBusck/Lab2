<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.busck.labtwo.MenuActivity">

    <Button
        android:id="@+id/shapes_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Shapes"
        android:onClick="openShapesActivity"/>

    <Button
        android:id="@+id/screen_info_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shapes_button"
        android:layout_marginTop="15dp"
        android:text="Screen Info"
        android:onClick="openScreenActivity"
        />

    <Button
        android:id="@+id/draw_circles_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_info_button"
        android:layout_centerHorizontal="true"
        android:text="Draw Circles"
        android:layout_marginTop="15dp"
        android:onClick="openCirclesActivity"/>

    <Button
        android:id="@+id/draw_bitmap_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/draw_circles_button"
        android:layout_centerHorizontal="true"
        android:text="Draw Bitmap"
        android:layout_marginTop="15dp"
        android:onClick="openBitmapActivity"/>



</RelativeLayout>
